@page "/almacen"

<EditForm Model="@almacen">
    <div class="container mt-3">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h5>Registro de Almacen</h5>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label for="nombre" class="form-label">Nombre:</label>
                            <InputText id="nombre" class="form-control" @bind-Value="almacen.Nombre" />
                        </div>
                    </div>
                    <div class="d-flex justify-content-end btn-space">
                        <button type="submit" class="btn btn-success me-2">Guardar</button>
                        <button type="button" class="btn btn-danger">Cancelar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</EditForm>
@code {
    private AlmacenModel almacen = new AlmacenModel();

    public class AlmacenModel
    {
        public string Nombre { get; set; }
    }
}
